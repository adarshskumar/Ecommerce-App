
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products }}
                    
                
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 16rem; height:30rem">
                        <img src="/product-images/{{this._id}}.jpg"
                            class="card-img-top" alt="..." style="height: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <h6 class="card-title">{{this.cat}}</h6>
                            <p class="card-text">{{this.description}}</p>
                            <h6 class="card-title">{{this.prize}}</h6>
                            {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
                            {{!-- ajax fot state management--}}
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button> 
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <script>
        function addToCart(proId){
            $.ajax({
                url:'/add-to-cart/'+proId, //engottu ponam
                method: 'get',  //get method
                success:(response)=>{ //request from client side
                    if(response.status){
                        let count = $('#cart-count').html() //taking the content of if 'cart-count'
                        count=parseInt(count)+1 //updating count from current value of count 
                        $("#cart-count").html(count)
                    }
                }
            })
        }
    </script>