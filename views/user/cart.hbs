<section>   {{!-- bootstrap table --}}
    <div class="container">
        <table class="table">
  <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Title</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
      {{#each products }}
    <tr>
      {{#each this.product}}
      <td><img style="/product-images/{{this._id}}.jpg" alt=""></td>        
      <td>{{this.name}}</td>
      {{/each}}
      <td>
        <button class="cart-item-count mr-3">-</button>{{this.quantity}}<button class="cart-item-count ml-3">+</button>
      </td>
      <td><a href="" class="btn btn-danger">Remove</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
